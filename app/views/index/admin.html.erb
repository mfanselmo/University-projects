	    <tr>
	      <th data-field="username">Postulante</th>
	      <th data-field="username">Foro postulacion</th>
	      <th data-field="username">Participaci√≥n</th>
	      <th data-field="email" >Aceptar</th>
	      <th data-field="email" >Rechazar</th>
	    </tr>
	  </thead>

	  <tbody>
	    <% Postulation.all.each do |pos| %>
	      <tr>
	      	<!--
	      	<% user = User.find(pos.user_id) %>
	      	<%# forum = Forum.find(pos.forum_id) %>
	      	<%# info = activity(user, forum) %>
	      	<%# info["posts"].each do |data| %>
		      	<p>Post: <%#= data["post"].title %></p>
		      	<%# data["comment"].each do |c| %>
		      		<p>Comentario: <%#= c.commenter %></p>
		      	<%# end %>
	      	<%# end %>
	      	<%# info["comments"].each do |data| %>
		      	<p>Comentario out: <%#= data.commenter %></p>
	      	<%# end %>-->
	      	<% user = User.find(pos.user_id) %>
	      	<% forum = Forum.find(pos.forum_id) %>
	        <td><%= link_to(user.username, user_path(pos.user_id))%></td>
	        <td><%= link_to(forum.name, forum_path(pos.forum_id))%></td>
