<div class="container hola">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3" >
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="" class="active" id="login-form-link">Login</a>
							</div>
							<div class="col-xs-6">
								<a href="" id="register-form-link">Register</a>
							</div>
						</div>
						
					</div>
					<div class="panel-body">
						<div class="row" >
							<div class="col-lg-12">

								<%= form_for(:user, :html => {role: "form", id: 'login-form' }, :url => session_path(:user)) do |f| %>
								

								<div class="form-group">
				                  <%= f.text_field :email, class: 'form-control', placeholder: 'Email'%>
				                </div>

				                <div class="form-group">
				                  <%= f.password_field :password, class: 'form-control', placeholder: 'ContraseÃ±a' %>
				                </div>
				                
				                <div class="form-group text-center" >
				                  <%= f.check_box :remember_me %>
				                  <label for="remember"> Remember Me</label>
				                </div>


				                <div class="form-group">
									<div class="row">
										<div class="col-sm-6 col-sm-offset-3">
						                  <%= f.submit 'Sign in', class: "form-control btn btn-login", id: "login-submit" , style: "background-color: #59B2E0; color: #fff"; %>
										</div>
									</div>
								</div>


				                <% end %>

				                <!-- PRIMERO -->
				                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', id: 'register-form', style: 'display: none;'}) do |f| %>
								<%= devise_error_messages! %>

								<div class="form-group" style="margin-left: 1px; margin-right: 1px;">
							        <%= f.text_field :username, class: "form-control",autofocus: true, placeholder: 'username' %>
								</div>

								<div class="form-group" style="margin-left: 1px; margin-right: 1px;">
							        <%= f.email_field :email,  class: 'form-control', placeholder: 'Email' %>
								</div>

								<div class="form-group" style="margin-left: 1px; margin-right: 1px;">
							        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
								</div>

								<div class="form-group" style="margin-left: 1px; margin-right: 1px;">
							        <%= f.password_field :password_confirmation, autocomplete: "off",class: 'form-control', placeholder: 'Password' %>
								</div>


								<div class="form-group">
									<div class="row">
										<div class="col-sm-6 col-sm-offset-3">
							  			  <%= f.submit "Sign up", class: "form-control btn btn-register", id: "login-submit", style: "background-color: #1CB94E; color: #fff;" %>
										</div>
									</div>
								</div>


								<% end %>

								


							</div>
						</div>
						<%= render 'users/shared/links' %>
					</div>
				</div>
			</div>
		</div>
	</div>

