<%= form_for(resource, :as => resource_name, :html => {class: 'navbar-form navbar-right form-inline', role: "form", id: 'register-form' , style: "display: none;"}, :url => session_path(:user)) do |f| %>
								  <%= devise_error_messages! %>


								  <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>

								  <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>

								  <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>

								  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password' %>

								  <%= f.submit "Sign up", class: "btn btn-success" %>
								<% end %>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>