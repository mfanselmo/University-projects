<% if user_signed_in? %>
  <div class="row-fluid">
      <div class="col-md-3" id="dashboardSubsripciones" >
        <% if subscripciones(current_user).any? %> 
          <h3 id="titulo_sub" ">Subscripciones</h3>
          <table class="table">
            <tbody>
              <% subscripciones(current_user).each do |sub| %>
                
              <tr>
                <td style="text-align: center;"><%= link_to Forum.find(sub).name, Forum.find(sub), :id => 'link_sub'  %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>


        <% if moderaciones(current_user).any? %>
          <h3 id="titulo_sub" ">Foros que moderas</h3>
          <table class="table">
            <tbody>
              <% moderaciones(current_user).each do |sub| %>
                
              <tr>
                <td style="text-align: center;"><%= link_to Forum.find(sub).name, Forum.find(sub), :id => 'link_sub'  %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
        


        <a href="/forums"><h4 id="titulo_sub" ">Todos los foros</h4></a>
        <table class="table">
            <tbody>
              <% Forum.all.each do |forum| %>
                
              <tr>
                <td style="text-align: center;"><%= link_to forum.name, forum, :id => 'link_sub'  %></td>
              </tr>
              <% end %>
            </tbody|>
        </table>
      </div>

      <!-- PARTE POSTS -->
      <div class="col-md-8   " id="dashboardPostInicio">
        <h3 id="titulo_sub" ">Lo mas reciente</h3>



        <% if subscripciones(current_user).any? %> 
        <!-- USUARIO TIENE SUBSCRIPCIONES -->
          <% Post.order('created_at').all.each do |post| %>
            <%= render 'index/todos_los_post', post: post, mi_tipo: "cada_post_1"%>
          <% end %>

        <% else %>
         <!-- NO TIENE NINGUNA SUBSCRIPCION, POR AHORA SE MUESTRA DE TODOS LOS FOROS IGUAL -->
          <% Post.order('created_at').all.each do |post| %>
            <%= render 'index/todos_los_post', post: post,  mi_tipo: "cada_post_1"%>
          <% end %>
        <% end %>
      </div>
  </div>
       
<% else %>
<!-- GUEST -->
<div class="row-fluid">
    <div class="col-md-3" id="dashboardSubsripciones" >
        <a href="/forums"><h4 id="titulo_sub" ">Todos los foros</h4></a>
        <table class="table">
            <tbody>
              <% Forum.all.each do |forum| %>
                
              <tr>
                <td style="text-align: center;"><%= link_to forum.name, forum, :id => 'link_sub'  %></td>
              </tr>
              <% end %>
            </tbody|>
        </table>
    </div>

    <div class="col-md-8" id="dashboardPostInicio">
      <% Post.order('created_at').all.each do |post| %>
        <%= render 'index/todos_los_post', post: post,  mi_tipo: "cada_post_1"%>
      <% end %>

    </div>
  
</div>
<% end %>
  












