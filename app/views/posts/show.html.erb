<p id="notice"><%= notice %></p>
 

<h3>
  <%= @post.title %>
  <small class="text-muted">de: <%= @post.name %></small>
</h3>
 
<p>
  <b>Contenido:</b>
  <%= @post.content %>
<p>
  <strong>Image:</strong>
  <%= image_tag @post.image %>
</p>
  
</p>

<h2>Comentarios</h2>

<% @post.comments.each do |comment| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12"></div>
    </div>
    <div class="row">
      <div class="col-sm-1">
        <div class="thumbnail">
          <%= image_tag(User.find_for_authentication(:username => comment.commenter).avatar.url , :alt => "user view") %>
        </div>
      </div>
      <div class="col-sm-10">
        <div class="panel panel-default">
          <div class="panel-heading">
            <strong><%= comment.commenter %></strong>
            <span class="text-muted">
              Hace <%= time_ago_in_words (Time.now - comment.created_at).seconds.from_now %> 
            <span style="float: right; ">
              <% if user_signed_in? and current_user.username == comment.commenter %>
                <%= link_to 'Borrar comentario', [comment.post, comment],
                 :confirm => 'Â¿Estas seguro que deseas borrarlo?',
                 :method => :delete %>
              <% end %>
            </span>
            </span>
          </div>
          <div class="panel-body">
            <p><%= comment.body %></p>
            <p><%= image_tag comment.image %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


 
