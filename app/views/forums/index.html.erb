<p id="notice"><%= notice %></p>

<h1>Foros</h1>

<table width="100%">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Número de posts</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.name %></td>
        <td><%= forum.posts.count %></td>
        <td><%= link_to 'Ver foro', forum %></td>
        <td><%= link_to 'Editar foro', edit_forum_path(forum) %></td>
        <td><%= link_to 'Eliminar foro', forum, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%# if current_user.admin? %>  <!-- Quitar el # de lo anterior para que solo el admin cree un foro-->
<%= link_to 'Nuevo Foro', new_forum_path %>
<%# end %>  <!-- Quitar el # de lo anterior para que solo el usuario cree un post-->
